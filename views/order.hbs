<h1>Order</h1>
{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <div class="card-title">
                            Order <small>{{_id}}</small>
                        </div>
                        <p class="date">{{date}}</p>
                        <p><em>{{user.name}}</em> {{user.userId.email}}</p>
                        <ol>
                            {{#each courses}}
                                <li>{{course.title}} (X <strong>{{count}}</strong>)</li>

                            {{/each}}
                        </ol>
                        <hr>
                        <p>Цена:<span class="price">{{price}}</span></p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{else}}
    <p>Not found any courses orders</p>
{{/if}}